<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#e7ebed"
    android:layout_weight="1">
<android.support.v7.widget.CardView
    android:layout_width="0dp"
    android:elevation="@dimen/dimen_2"
    android:minHeight="200dp"
    android:layout_margin="@dimen/dimen_2"
    android:layout_weight="0.5"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingBottom="@dimen/dimen_14"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_6"
            android:id="@+id/title"
            android:text="URL"
            android:textStyle="bold"

            android:textAlignment="center"
            android:paddingBottom="@dimen/dimen_2"
            android:textSize="18dp"

            />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_6"
        android:layout_marginTop="@dimen/dimen_4"
        android:id="@+id/startTime"
        android:text="Start"
        android:paddingBottom="@dimen/dimen_6"
        android:textSize="@dimen/textdimen"

        />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:id="@+id/endTime"
        android:paddingTop="@dimen/dimen_6"
        android:paddingBottom="@dimen/dimen_6"
        android:textSize="@dimen/textdimen"

        />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_6"
        android:id="@+id/startsavedTime"
        android:text="Start Save"
        android:paddingBottom="@dimen/dimen_6"
        android:textSize="@dimen/textdimen"

        />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_6"

            android:text="End Save"
            android:id="@+id/endsavedTime"
            android:paddingBottom="@dimen/dimen_6"
            android:textSize="@dimen/textdimen"

            />
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>